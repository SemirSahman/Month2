package ba.bitcamp.week5.day4.vjezbe;

public abstract class PersonalComputer {

	private String operativeSystem;
	private Integer ramMemoray;
	private Integer price;

	public String getOperativeSystem() {
		return operativeSystem;
	}

	public void setOperativeSystem(String operativeSystem) {
		this.operativeSystem = operativeSystem;
	}

	public Integer getRamMemoray() {
		return ramMemoray;
	}

	public void setRamMemoray(Integer ramMemoray) {
		this.ramMemoray = ramMemoray;
	}

	public Integer getPrice() {
		return price;
	}

	public void setPrice(Integer price) {
		this.price = price;
	}

	public void printTypeInfo() {
		System.out.println("Your PC use " + getOperativeSystem() + " OS");
		System.out
				.println("Your PC have " + getRamMemoray() + " GB ram memory");
		System.out.println("Your PC cost " + getPrice() + " KM");
	}

}
