		}

	}
	
	
	static class Task8 implements Runnable {

		@Override
		public synchronized void run() {
			for (int i = 875_000; i < 1_000_000; i++) {
				boolean isPrime = true;
				for (int j = 2; j < i; j++) {
					if (i % j == 0) {
						isPrime = false;
						break;
					}
				}
				if (isPrime)
					counter++;
			}
			System.out.println(counter);
		}

	}

}
