package ba.bitcamp.week10.day3.vjezbe;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.StringTokenizer;

public class Task1 {

	public static void main(String[] args) {
		
		BufferedReader in = null;
		
		try {
			in = new BufferedReader(new FileReader(new File("src/example.csv")));
		} catch (FileNotFoundException e) {
			System.out.println("Cannot find file!");
		}
		
		try {
			in.readLine();
			while (in.ready()) {
				String line = in.readLine();
				StringTokenizer st = new StringTokenizer(line, ",");
				
				String name = st.nextToken();
				String surname = st.nextToken();
				String gender = st.nextToken();
				String position = st.nextToken();
				String salary = st.nextToken();
				
				System.out.println("Person: " + name + " " + surname + " Gender: " + gender + " Position: " + position + " Salary: " + salary );
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}

}
