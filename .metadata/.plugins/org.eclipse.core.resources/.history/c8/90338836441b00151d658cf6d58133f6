package ba.bitcamp.week6.day4.Recursion.part1;

import java.util.Arrays;

public class Task8 {

	public static void fillArray2(int[] arr, int n) {
		int counter = 0;
		int idx = n;
		if (idx == 0) {
			idx = counter;
			n = idx - 2;
			arr[idx] = n;
			counter++;
			fillArray2(arr, n - 1);

			if (idx == arr.length) {
				return;
			}
		}
		arr[idx] = n;
		counter++;
		fillArray2(arr, n - 1);

	}

	public static void main(String[] args) {
		int[] arr = new int[10];
		fillArray2(arr, 3);
		System.out.println(Arrays.toString(arr));

	}

}
